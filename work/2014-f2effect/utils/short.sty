\newcommand\pthen               {\trm{then}}
\newcommand\pand                {\trm{and}}
\newcommand\por                 {\trm{or}}
\newcommand\pforall             {\trm{forall}}
\newcommand\pForall             {\trm{Forall}}
\newcommand\pexists             {\trm{exists}}
\newcommand\pimplies            {\trm{implies}}
\newcommand\pin                 {\trm{in}}
\newcommand\qqed
{       \begin{flushright}
        \vspace{-1.5em}
        $\qed$
        \end{flushright}
}


