% -- A type rule.
\newcommand{\ruleI}[2]
{
        \frac   {\displaystyle #1}
                {\displaystyle #2} \ 
}

\newcommand{\ruleIN}[3]
{
    \enskip
    \ruleI{#1}{#2}
    \mbox{(#3)}
    \enskip
}

\newcommand{\ruleAx}[2]
{
        \ruleIN{}{#1}{#2}
}


\newcommand\ProcInject[4]
{                    
                     #1;~\tt{inject}~#2~#3~\Rightarrow~#4
}

\newcommand\ProcsInject[4]
{
                     #1;~\tt{injects}~#2~#3~\Rightarrow~#4
}

\newcommand\ProcShake[3]
{                    #1~\xRightarrow{#2}~#3
}

\newcommand\ProcsShake[3]
{                    \ProcShake{#1}{#2}{#3}
}

\newcommand\ProcBlockShake[7]
{                    #1;~#2;~#3~\xRightarrow{#4}~#5;~#6;~#7
}

\newcommand\ProcsFeed[4]
{                    #1;~#2~\Rightarrow~#3;~#4
}

\newcommand\ExpEval[3]
{                    #1~\vdash~#2~\Downarrow~#3
}



